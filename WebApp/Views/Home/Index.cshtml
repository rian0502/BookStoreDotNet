@{
    ViewBag.Title = "Home Page";
}

<div class="row">
    <div class="col-lg-3 col-6">
        <!-- small box -->
        <div class="small-box bg-info">
            <div class="inner">
                <h3>@ViewBag.Kategori</h3>

                <p>Kategori</p>
            </div>
            <div class="icon">
                <i class="fas fa-list-ul"></i>
            </div>
            <a href="@Url.Action("Index", "KategoriBuku")" class="small-box-footer">More info <i class="fas fa-arrow-circle-right"></i></a>
        </div>
    </div>
    <!-- ./col -->
    <div class="col-lg-3 col-6">
        <!-- small box -->
        <div class="small-box bg-success">
            <div class="inner">
                <h3>@ViewBag.Product</h3>

                <p>Product</p>
            </div>
            <div class="icon">
                <i class="fas fa-boxes"></i>
            </div>
            <a href="@Url.Action("Index", "Product")" class="small-box-footer">More info <i class="fas fa-arrow-circle-right"></i></a>
        </div>
    </div>
    <!-- ./col -->
    <div class="col-lg-3 col-6">
        <!-- small box -->
        <div class="small-box bg-warning">
            <div class="inner">
                <h3>@ViewBag.Buku</h3>

                <p>Buku</p>
            </div>
            <div class="icon">
                <i class="fas fa-book"></i>
            </div>
            <a href="@Url.Action("Index", "Buku")" class="small-box-footer">More info <i class="fas fa-arrow-circle-right"></i></a>
        </div>
    </div>
    <!-- ./col -->
    <div class="col-lg-3 col-6">
        <!-- small box -->
        <div class="small-box bg-danger">
            <div class="inner">
                <h3>@ViewBag.Users</h3>

                <p>Pengguna</p>
            </div>
            <div class="icon">
                <i class="fas fa-users"></i>
            </div>
            <a href="" class="small-box-footer">More info <i class="fas fa-arrow-circle-right"></i></a>
        </div>
    </div>
    <!-- ./col -->
</div>

<div class="card mt-3">
    <div class="row">
        <div class="col">
            <div id="chartKategoriBuku" style="width:100%; height:400px;"></div>
        </div>
        <!-- ./col -->
    </div>
</div>


<div class="card mt-3">
    <div class="row">
        <div class="col">
            <div id="chartHargaProduct" style="width:100%; height:400px;"></div>
        </div>
        <!-- ./col -->
    </div>
</div>